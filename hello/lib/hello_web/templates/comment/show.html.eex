<h2>Show Comment</h2>

<ul>

  <li>
    <strong>Post:</strong>
    <td><%= link @comment.post_id, to: post_path(@conn, :show, @comment.post_id) %></td>
  </li>

  <li>
    <strong>Text:</strong>
    <%= @comment.text %>
  </li>

</ul>

<span><%= link "Edit", to: comment_path(@conn, :edit, @comment) %></span>
<span><%= link "Back", to: comment_path(@conn, :index) %></span>
